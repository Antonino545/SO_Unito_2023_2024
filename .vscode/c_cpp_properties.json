{
  "configurations": [
    {
      "name": "linux-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**",
        "/usr/include"
      ],
      "defines": [
        "_GNU_SOURCE"  // Add this define
      ],
      "compilerArgs": [
        "-std=c99",
        "-Wall",
        "-Wextra",
        "-Werror",
        "-D_GNU_SOURCE"
      ],
      "compilerPath": "/usr/bin/gcc-7",
      "cStandard": "c11",
      "cppStandard": "gnu++14",
      "intelliSenseMode": "linux-gcc-x64",
      "configurationProvider": "ms-vscode.makefile-tools"
    }
  ],
  "version": 4
}
